# Production Environment Variables - SERVER CONFIGURATION
# SECURE CONFIGURATION - DO NOT SHARE OR COMMIT TO GIT

# Application
NODE_ENV=production
PORT=3000

# MongoDB Configuration - SECURE SERVER SETUP
MONGODB_URI=mongodb://127.0.0.1:27017/royalq_salebot
# Alternative with authentication (uncomment if needed):
# MONGODB_URI=mongodb://royalq_user:STRONG_PASSWORD_HERE@127.0.0.1:27017/royalq_salebot?authSource=royalq_salebot

# Salebot API Configuration
SALEBOT_API_BASE_URL=https://api.salebot.pro
SALEBOT_API_KEY=your_salebot_api_key_here

# Security - GENERATE STRONG PASSWORDS
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_STRING_64_CHARS_MIN
SESSION_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_STRING_64_CHARS_MIN

# Server Security
DB_HOST=127.0.0.1
DB_PORT=27017
DB_NAME=royalq_salebot

# PM2 Configuration
PM2_APP_NAME=royalq-salebot
PM2_INSTANCES=1

# Backup Configuration
BACKUP_DIR=/var/backups/royalq-salebot
BACKUP_RETENTION_DAYS=30

# Monitoring
HEALTH_CHECK_INTERVAL=30000
LOG_LEVEL=info
